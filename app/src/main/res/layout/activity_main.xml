<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:focusableInTouchMode="true"
    android:background="#210D08"
    android:id="@+id/mainLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="range: "
        android:id="@+id/rangeText"
        android:height="50dp"
        android:layout_below="@+id/restartButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/restartButton"
        android:layout_alignEnd="@+id/restartButton"
        android:textSize="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter"
        android:tag="enter"
        android:id="@+id/enterButton"
        android:height="70dp"
        android:onClick="submitNumber"
        android:background="@drawable/clickablebutton"
        android:layout_alignTop="@+id/b0"
        android:layout_alignLeft="@+id/b9"
        android:layout_alignStart="@+id/b9"
        android:layout_alignRight="@+id/numberOutput"
        android:layout_alignEnd="@+id/numberOutput"
        android:textAllCaps="false"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:tag="delete"
        android:id="@+id/deleteButton"
        android:height="70dp"
        android:width="70dp"
        android:onClick="deleteNumber"
        android:background="@drawable/clickablebutton"
        android:layout_alignTop="@+id/b0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/b8"
        android:layout_toStartOf="@+id/b8"
        android:textAllCaps="false"
        android:textSize="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numberOutput"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_above="@+id/b1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/congrats"
        android:layout_above="@+id/numberOutput"
        android:layout_alignRight="@+id/numberOutput"
        android:layout_alignEnd="@+id/numberOutput"
        android:layout_marginBottom="31dp"
        android:textSize="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/b0"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="0"
        android:background="@drawable/clickablebutton"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="restart"
        android:tag="restart"
        android:id="@+id/restartButton"
        android:height="70dp"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:onClick="restart"
        android:background="@drawable/clickablebutton"
        android:width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/b7"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="7"
        android:background="@drawable/clickablebutton"
        android:layout_above="@+id/b0"
        android:layout_toLeftOf="@+id/b8"
        android:layout_toStartOf="@+id/b8"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/b8"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="8"
        android:background="@drawable/clickablebutton"
        android:layout_alignTop="@+id/b7"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/b9"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="9"
        android:background="@drawable/clickablebutton"
        android:layout_alignTop="@+id/b8"
        android:layout_toRightOf="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/b5"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="5"
        android:background="@drawable/clickablebutton"
        android:layout_above="@+id/b7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/b6"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="6"
        android:background="@drawable/clickablebutton"
        android:layout_alignTop="@+id/b5"
        android:layout_alignLeft="@+id/b9"
        android:layout_alignStart="@+id/b9"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/b4"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="4"
        android:background="@drawable/clickablebutton"
        android:layout_alignTop="@+id/b5"
        android:layout_alignLeft="@+id/b7"
        android:layout_alignStart="@+id/b7"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/b1"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="1"
        android:background="@drawable/clickablebutton"
        android:layout_above="@+id/b4"
        android:layout_alignRight="@+id/b4"
        android:layout_alignEnd="@+id/b4"
        android:layout_marginBottom="10dp"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/b2"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="2"
        android:background="@drawable/clickablebutton"
        android:layout_alignTop="@+id/b1"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/b3"
        android:width="70dp"
        android:minWidth="5dp"
        android:height="70dp"
        android:onClick="addNumber"
        android:tag="3"
        android:background="@drawable/clickablebutton"
        android:layout_alignTop="@+id/b2"
        android:layout_alignLeft="@+id/b6"
        android:layout_alignStart="@+id/b6"
        android:textSize="18dp" />

</RelativeLayout>
